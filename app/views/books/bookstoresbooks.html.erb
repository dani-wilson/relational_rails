<h1><%= @bookstore.name %></h1>

<h2><% @books.each do |book| %></h2>
    <% if book.bookstore_id == @bookstore.id %>
    <b><h3><%= book.book_title %></b></h3>
    <p><b><%= book.author %></p></b>
    <p>Genre: <%= book.genre %></p>
    <p>In Stock: <%= book.available_copies %>
    <p>Price: $<%= book.price %>.00</p>

    <%end%>
<%end%>

<p><%= link_to "Back to All Books", "/books" %></p>








